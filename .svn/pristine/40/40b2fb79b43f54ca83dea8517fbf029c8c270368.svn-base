{include file="public/meta" /}
<title>部门信息</title>
</head>
<body>
<div class="cl pd-20" style=" background-color:#5bacb6">
    <img class="avatar size-XL l" src="__STATIC__/static/h-ui/images/user.png">
    <dl style="margin-left:80px; color:#fff">
        <dt><span class="f-18">{$user.username}</span> </dt>
        <dd class="pt-10 f-12" style="margin-left:0">{$user_info.birthday}</dd>
    </dl>
</div>
<div class="pd-20">
    <table class="table">
        <tbody>
        <tr>
            <th class="text-r" width="100">性别：</th>
            <td>{$user_info.sex}</td>
        </tr>
        <tr>
            <th class="text-r">手机：</th>
            <td>{$user_info.phone}</td>
        </tr>
        <tr>
            <th class="text-r">邮箱：</th>
            <td>{$user_info.email}</td>
        </tr>
        <tr>
            <th class="text-r">部门：</th>
            <td>{$dept.name}</td>
        </tr>
        <tr>
            <th class="text-r">注册时间：</th>
            <td>{:date('Y-m-d',$user.create_time)}</td>
        </tr>
        </tbody>
    </table>
</div>
{include file="public/footer" /}
